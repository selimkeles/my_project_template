{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Configure CMake",
            "type": "shell",
            "command": "mkdir build; cd build; cmake -G 'MinGW Makefiles' -DCMAKE_C_COMPILER=gcc -DCMAKE_CXX_COMPILER=g++ ..",
            "problemMatcher": [],
            "detail": "Task to configure CMake"
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "make",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": ["$gcc"],
            "detail": "Generated task for building"
        }
        ,
        {
            "label": "Clean",
            "type": "shell",
            "command": "make clean",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": ["$gcc"],
            "detail": "Generated task for cleaning"
        }
    ]
}