{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Configure CMake for Build",
            "type": "shell",
            "command": "mkdir -p build; cd build; cmake ..",
            "problemMatcher": [],
            "detail": "Task to configure CMake for Build",
            "hide": true
        },
        {
            "label": "Configure CMake for Debug",
            "type": "shell",
            "command": "mkdir -p build; cd build; cmake -DCMAKE_BUILD_TYPE=Debug ..",
            "problemMatcher": [],
            "detail": "Task to configure CMake for Debug",
            "hide": true
        },
        {
            "label": "Configure CMake for Test",
            "type": "shell",
            "command": "mkdir -p build; cd build; cmake -DCMAKE_BUILD_TYPE=Test ..",
            "problemMatcher": [],
            "detail": "Task to configure CMake for Test",
            "hide": true
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "cmake --build .",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "dependsOn": [
                "Configure CMake for Build"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Generated task for building"
        },
        {
            "label": "Build Debug",
            "type": "shell",
            "command": "cmake --build . --config Debug",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "dependsOn": [
                "Configure CMake for Debug"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Generated task for debugging",
            "hide": true
        },
        {
            "label": "Build Release",
            "type": "shell",
            "command": "cmake --build . --config Release",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "dependsOn": [
                "Configure CMake for Release"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Generated task for release"
        },
        {
            "label": "Build Tests",
            "type": "shell",
            "command": "cmake --build .",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "dependsOn": [
                "Configure CMake for Test"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Generated task for tests",
            "hide": true
        },
        {
            "label": "Clean",
            "type": "shell",
            "linux": {
                "command": "rm -rf build"
            },
            "windows": {
                "command": "Remove-Item -Recurse -Force build"
            },
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Generated task for cleaning"
        }
    ]
}