{
    "enableConfigurationSquiggles": true,
    "env": {
        "Project_Include": [
            "${workspaceFolder}/**"
            // ,"/Path/to/your/include/folder"
        ],
        "Project_Browse": [
            "${workspaceFolder}/"
            // ,"/Path/to/your/browse/folder"
        ],
        "Project_Forced_Include":[
            // "/Path/to/your/forced/include/file"
        ]
    },
    "configurations": [
        {
            "name": "Win32",
            "browse": {
                "path": [
                    "${workspaceFolder}/**",
                    "${Project_Browse}"
                ]
            },
            "forcedInclude": [
                "${Project_Forced_Include}"
            ],
            "includePath": [
                "${workspaceFolder}/**",
                "${Project_Include}"
            ],
            "defines": [
                "_DEBUG",
                "UNICODE",
                "_UNICODE"
            ]
        }
    ],
    "version": 4
}