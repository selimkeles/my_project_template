{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug (Linux/MacOS)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/my_project",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build",
            "miDebuggerPath": "/usr/bin/gdb" // Update this path if GDB is located elsewhere
        },
        {
            "name": "Debug (Windows)",
            "type": "cppdbg",
